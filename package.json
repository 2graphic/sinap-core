{
  "name": "sinap-core",
  "version": "0.0.0-development",
  "readme": "README.md",
  "description": "Core utilities for sinap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/2graphic/sinap-core"
  },
  "main": "lib/index.js",
  "typings": "lib/index",
  "files": [
    "lib/",
    "sinap-includes/"
  ],
  "release": {
    "verifyRelease": {
      "path": "cracks",
      "paths": [
        "test/",
        "package.json"
      ],
      "silent": false
    }
  },
  "scripts": {
    "format": "tsfmt -r --baseDir ./src/ && tsfmt -r --baseDir ./tests/",
    "clean": "rm -r ./lib/ ./test/build/ ./node_modules/ ./typings/",
    "build": "webpack",
    "test": "mocha test/build/index.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@types/node": "latest",
    "typescript": "https://github.com/2graphic/sinap-core/blob/master/typescript-2.2.0.tgz?raw=true",
    "cracks": "^3.1.2",
    "glob": "^7.1.1",
    "mocha": "^3.2.0",
    "raw-loader": "0.5.1",
    "semantic-release": "^6.3.2",
    "ts-loader": "2.0.0",
    "typescript-formatter": "latest",
    "webpack": "2.2.1",
    "webpack-merge": "2.6.1",
    "webpack-node-externals": "1.5.4"
  }
}
