{
  "name": "sinap-core",
  "version": "0.0.0-development",
  "readme": "README.md",
  "description": "Core utilities for sinap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/2graphic/sinap-core"
  },
  "main": "lib/index.js",
  "typings": "lib/src/index",
  "files": [
    "lib/"
  ],
  "release": {
    "verifyRelease": {
      "path": "cracks",
      "paths": [
        "test/",
        "package.json"
      ],
      "silent": false
    }
  },
  "scripts": {
    "formater": "globstar -- tsfmt -r  --baseDir . ./src/*.ts ./test/*.ts ./sinap-includes/*.ts",
    "formater:verify": "globstar -- tsfmt --verify  --baseDir . ./src/*.ts ./test/*.ts ./sinap-includes/*.ts",
    "format": "npm run formater && tslint --project . --fix",
    "lint": "npm run formater:verify && tslint --project .",
    "clean": "rm -r ./lib/ ./test/build/ ./node_modules/ ./typings/",
    "build": "webpack",
    "typings": "typings install",
    "test": "npm run build && npm run test:nobuild",
    "test:nobuild": "mocha test/build/index.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prepublish": "npm run typings"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "typescript": "https://github.com/Sheyne/TypeScript/releases/download/sheyne-2.3.0-beta1/typescript-2.3.0.tgz",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "latest",
    "chai": "^3.5.0",
    "cracks": "^3.1.2",
    "glob": "^7.1.1",
    "globstar": "^1.0.0",
    "mocha": "^3.2.0",
    "raw-loader": "0.5.1",
    "semantic-release": "^6.3.2",
    "ts-loader": "2.0.0",
    "tslint": "^4.4.2",
    "typescript-formatter": "^4.1.2",
    "typings": "^2.1.0",
    "webpack": "2.2.1",
    "webpack-merge": "2.6.1",
    "webpack-node-externals": "1.5.4"
  }
}
